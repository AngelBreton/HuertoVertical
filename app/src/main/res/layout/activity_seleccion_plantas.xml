<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_gravity="center"
    android:onClick="Anterior"
    tools:context=".SeleccionPlantas">
    <TextView
        android:id="@+id/letrero_nivel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="Nueva Cosecha"
        android:textSize="30dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/letrero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:hint="fechas"
        android:textSize="20dp"
        android:textStyle="normal" />



    <TextView
        android:id="@+id/numeroNivel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/botonverde"
        android:text="Nivel 1"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="235dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:text="Elige Hortaliza"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="140dp"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="Fecha Inicio" />



    <TextView
        android:id="@+id/numeroNivel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/botonverde"
        android:text="Nivel 2"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="235dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:hint="Elige Hortaliza"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="260dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:hint="Fecha Inicio" />


    <TextView
        android:id="@+id/numeroNivel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/botonverde"
        android:text="Nivel 3"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="320dp"/>

    <TextView
        android:id="@+id/text_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="235dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:hint="Elige Hortaliza"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="380dp"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:hint="Fecha Inicio" />

    <TextView
        android:id="@+id/numeroNivel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:background="@drawable/botonverde"
        android:text="Nivel 4"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="440dp"/>

    <TextView
        android:id="@+id/text_view4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="235dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_arrow"
        android:gravity="center_vertical"
        android:hint="Elige Hortaliza"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginTop="500dp"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:hint="Fecha Inicio" />

    <Button
        android:id="@+id/guardarCosecha_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/botonverde"
        android:text="Guardar"
        />

</RelativeLayout>